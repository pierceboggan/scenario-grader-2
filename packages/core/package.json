{
  "name": "@scenario-grader/core",
  "version": "1.0.0",
  "description": "Core library for VS Code Scenario Runner",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./browser": {
      "import": "./dist/browser.mjs",
      "require": "./dist/browser.js",
      "types": "./dist/browser.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts src/browser.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts src/browser.ts --format cjs,esm --dts --watch"
  },
  "dependencies": {
    "date-fns": "^3.0.6",
    "nanoid": "^5.0.4",
    "openai": "^6.15.0",
    "playwright": "^1.40.0",
    "screenshot-desktop": "^1.14.0",
    "yaml": "^2.3.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.0"
  }
}
